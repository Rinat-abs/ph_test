<section class="welcome">  
    <div class="container">
        
        <div style="margin-top: 30px;">
            <a href="/admin" class="admin__results__link" style="margin-bottom: 10px; width: 100px;">Назад</a>
            <%if (success){%>
                <p style="text-align: center; color: darkcyan; font-size: 40px;
                margin-bottom: 10px;
                "><%-success%></p>
            <%}%>
            <%results.forEach((result, idx) => {%>
               <div style="margin-bottom: 15px; font-weight: 700;">
                <%=idx+1%>) <%=result.q%>
               </div>
                
                <%=result.a%>
                <hr>
                <br>
               
            <%})%>
        </div>

        <div class="admin__retake__title">
            Текущая категори: <%=category.category%>
        </div>  
        <div class="admin__retake__title">
           Вопросов в базе: <%=countQuestion%>
        </div>  


  
            <a class="admin__results__link" style="cursor: pointer;" href="/auto-add-test-to-db/done">Загрузить в текущую категорию</a>
        
       
    </div>
</section>



